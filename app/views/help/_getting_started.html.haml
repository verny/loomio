%section{"role" => "region", "aria-labelledby" => "getting-started"}
  %h2#getting-started= t :"new_help.getting_started.title"
  %p= t :"new_help.getting_started.intro"
  %h3.anchor#starting-new-group= t :"new_help.getting_started.starting_new_group.title"
  .row
    .col-sm-8
      %p= t :"new_help.getting_started.starting_new_group.body_html"
    .col-sm-4
      =image_tag "try-loomio-beta.png", alt: "try loomio beta button", class: "screenshot"
  %h3.anchor#invited-into-group= t :"new_help.getting_started.invited_into_group.title"
  %p= t :"new_help.getting_started.invited_into_group.body_html"
  %h3.anchor#joining-existing-group= t :"new_help.getting_started.joining_existing_group.title_html"
