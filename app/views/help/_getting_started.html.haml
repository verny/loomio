  %p= t :"new_help.getting_started.joining_existing_group.body.explore_page_html"
  .row
    .col-sm-8
      %p= t :"new_help.getting_started.joining_existing_group.body.open_to_join_html"
    .col-sm-4
      =image_tag "join-group.png", alt: "join group button", class: "screenshot"
  .row
    .col-sm-8
      %p= t :"new_help.getting_started.joining_existing_group.body.by_request_html"
    .col-sm-4
      =image_tag "ask-to-join-group.png", alt: "ask to join group button", class: "screenshot"
  %p= t :"new_help.getting_started.joining_existing_group.body.invitation_only_html"
  %h3.anchor#single-sign-on= t :"new_help.getting_started.single_sign_on.title"
  .row
    .col-sm-7
      = t :"new_help.getting_started.single_sign_on.body_html"
